#!/usr/bin/env php
<?php

use Symfony\Component\Console\Application;
use Symfony\Component\Dotenv\Dotenv;

if (php_sapi_name() !== 'cli') {
    exit;
}

$rootApp = isset($_composer_bin_dir) ? dirname($_composer_bin_dir, 2) : dirname(__DIR__);

$envfile = $rootApp . '/.env';

try {
    require $_composer_autoload_path ?? $rootApp . '/vendor/autoload.php';
} catch (\Throwable $e) {
    echo "Something wrong happened when we tried to send data to Cockpit servers.\n";
    echo "Please look at your log file for more info";
    error_log($e);
    return 1;
}

if (file_exists($envfile)) {
    (new Dotenv())->usePutenv()->load($envfile);
}

$commands = array_map(function (string $filename) {
    $class = basename($filename, '.php');

    $class = "Cockpit\\Php\\Commands\\$class";

    return new $class();
}, glob(__DIR__ . '/commands/*'));

$app = new Application();

$app->setName('Cockpit');

$app->addCommands($commands);

$app->run();
