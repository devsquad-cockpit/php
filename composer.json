{
  "version": "1.0.0",
  "name": "cockpit/php",
  "description": "A Freemium package to help you tracking the project errors",
  "license": "MIT",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    {
      "name": "DevSquad",
      "homepage": "https://devsquad.com"
    }
  ],
  "scripts": {
    "coverage": "XDEBUG_MODE=coverage ./vendor/bin/pest --coverage",
    "test": [
      "./vendor/bin/pest"
    ],
    "post-autoload-dump": [
      "@php ./vendor/bin/testbench package:discover --ansi"
    ],
    "fix": [
      "./vendor/bin/php-cs-fixer fix --using-cache=no --verbose"
    ],
    "verify": [
      "./vendor/bin/php-cs-fixer fix --dry-run --using-cache=no --verbose --stop-on-violation",
      "./vendor/bin/phpcs --standard=phpcs.xml",
      "./vendor/bin/phpmd src text ./phpmd.xml",
      "./vendor/bin/pest"
    ]
  },
  "autoload": {
    "psr-4": {
      "Cockpit\\Php\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Cockpit\\Php\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^7.3|^8.1",
    "spatie/backtrace": "^1.2",
    "illuminate/support": "^6.9|^7.0|^8.0|^9.0",
    "illuminate/http": "^8.8|^9.28",
    "illuminate/container": "^9.28"
  },
  "require-dev": {
    "orchestra/testbench": "^7.5",
    "phpunit/phpunit": "^9.3.3",
    "phpmd/phpmd": "^2.9",
    "squizlabs/php_codesniffer": "^3.6",
    "friendsofphp/php-cs-fixer": "^3.0",
    "pestphp/pest": "^1.21",
    "pestphp/pest-plugin-mock": "^1.0",
    "pestphp/pest-plugin-faker": "^1.0"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
